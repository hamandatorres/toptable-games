{
	"name": "toptable-games",
	"private": true,
	"version": "1.0.0",
	"type": "commonjs",
	"description": "TopTable Games - Board Game Collection Tracker",
	"main": "server/index.js",
	"scripts": {
		"dev": "vite",
		"dev:server": "NODE_OPTIONS='--loader ts-node/esm' nodemon server/index.js",
		"dev:full": "concurrently \"npm run dev\" \"npm run dev:server\"",
		"build": "vite build",
		"build:ci": "npm run install-platform-deps && npm run setup-sass && npm run build",
		"build:server": "node --experimental-loader ts-node/esm server/index.js",
		"start": "node --loader ts-node/esm server/index.js",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"type-check": "tsc --noEmit",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:watch": "vitest --watch",
		"preview": "vite preview",
		"install-platform-deps": "node scripts/install-platform-deps.js",
		"setup-sass": "node scripts/setup-sass.js",
		"test:ci-env": "node scripts/test-ci-environment.js",
		"docker:build": "docker build -t toptable-games .",
		"docker:run": "docker run -p 3000:3000 -p 4050:4050 toptable-games",
		"docker:dev": "docker-compose up --build",
		"docker:prod": "docker-compose -f docker-compose.prod.yml up --build",
		"deploy:prod": "node scripts/deploy-production.ps1",
		"deploy:backup": "node scripts/deploy-production.ps1 backup",
		"deploy:health": "node scripts/deploy-production.ps1 health",
		"security:audit": "npm audit && node scripts/security-audit.mjs",
		"performance:analyze": "npm run build && npx webpack-bundle-analyzer dist/stats.json",
		"monitoring:start": "docker-compose -f docker-compose.prod.yml --profile monitoring up -d",
		"monitoring:stop": "docker-compose -f docker-compose.prod.yml --profile monitoring down"
	},
	"dependencies": {
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.1",
		"@reduxjs/toolkit": "^2.8.2",
		"@types/dompurify": "^3.0.5",
		"@types/react-redux": "^7.1.34",
		"@types/react-router-dom": "^5.3.3",
		"axios": "^1.11.0",
		"bcryptjs": "^2.4.3",
		"chart.js": "^4.4.1",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"dompurify": "^3.2.6",
		"dotenv": "^16.6.1",
		"express": "^4.21.0",
		"express-rate-limit": "^7.5.1",
		"express-session": "^1.18.1",
		"helmet": "^8.1.0",
		"html-react-parser": "^5.0.15",
		"isomorphic-dompurify": "^2.26.0",
		"massive": "^6.11.3",
		"memorystore": "^1.6.7",
		"nodemailer": "^6.9.8",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"react-redux": "^9.2.0",
		"react-router-dom": "^6.30.1",
		"react-toastify": "^11.0.5",
		"validator": "^13.15.15",
		"web-vitals": "^5.1.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.33.0",
		"@testing-library/jest-dom": "^6.8.0",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/bcryptjs": "^2.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/express-session": "^1.18.0",
		"@types/node": "^22.17.2",
		"@types/nodemailer": "^6.4.19",
		"@types/react": "^19.1.10",
		"@types/react-dom": "^19.1.7",
		"@types/validator": "^13.12.2",
		"@vitejs/plugin-react-swc": "^4.0.0",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "^3.2.4",
		"concurrently": "^9.1.0",
		"eslint": "^9.33.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.3.0",
		"happy-dom": "^18.0.1",
		"hint": "^7.1.13",
		"jsdom": "^26.1.0",
		"nodemon": "^3.1.10",
		"sass-embedded": "^1.90.0",
		"terser": "^5.43.1",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.39.1",
		"vite": "^7.1.2",
		"vitest": "^3.2.4"
	},
	"engines": {
		"node": ">=20.19.0",
		"npm": ">=9.0.0"
	},
	"overrides": {
		"pg-promise": "^11.5.5"
	},
	"keywords": [
		"boardgames",
		"react",
		"typescript",
		"redux",
		"express",
		"postgresql",
		"docker"
	],
	"author": "Carlos Chavez, David Koser, Richard Miller Wimmer",
	"license": "MIT"
}
