# Production Environment Configuration Template
# Copy this file to .env.production and update with your production values

# Environment
NODE_ENV=production
SERVER_PORT=4050

# Database Configuration (Production)
CONNECTION_STRING=postgresql://username:password@your-db-host:5432/toptable_games_prod
POSTGRES_DB=toptable_games_prod
POSTGRES_USER=your_prod_user
POSTGRES_PASSWORD=your_secure_production_password

# Session Configuration (Production)
# Generate a strong session secret: openssl rand -base64 32
SESSION_SECRET=your-super-secure-production-session-secret-256-bits

# Redis Configuration (Production)
REDIS_URL=redis://:your_redis_password@your-redis-host:6379
REDIS_PASSWORD=your_secure_redis_password

# Email Configuration (Production)
EMAIL_USER=your-production-email@yourdomain.com
EMAIL_PASSWORD=your-production-app-password
EMAIL_HOST=smtp.yourdomain.com
EMAIL_PORT=587

# Security Configuration
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log

# SSL/TLS Configuration (if using HTTPS)
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"
