# Docker Environment Configuration
# Use this for containerized development

# Environment
NODE_ENV=development
SERVER_PORT=4050

# Database Configuration (Docker)
CONNECTION_STRING=postgresql://postgres:postgres@postgres:5432/toptable_games?sslmode=disable
POSTGRES_DB=toptable_games
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Session Configuration (Docker Development)
SESSION_SECRET=docker-development-session-secret-that-is-super-secure-and-longer-than-32-characters-for-container-environment

# Redis Configuration (Docker)
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
REQUEST_SIZE_LIMIT=10mb

# Logging
LOG_LEVEL=debug
DEBUG=app:*

# Email Configuration (optional for password reset)
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
